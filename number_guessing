import java.util.*;
public class Main{
    public static void main(String[] args){
        int a = (int)(Math.random()*100);
       int guess_no,count =0;
       do{
        System.out.println("please guess my number ");
        Scanner var = new Scanner(System.in);
        guess_no = var.nextInt();
        count ++;
        if(guess_no == a){
            System.out.println("Yes you have guess the right no ");
            System.out.println("you have guessed it  in  "+count+ " steps ");
        }
        else if(guess_no>a){
            System.out.println("please enter smaller no ");
        }
        else if(guess_no <a){
            System.out.println("plsease enter a bigger no ");
        }
        }
        while(guess_no!=a);
    }
}
